@page "/fetchproducts"
@using System.Net.Http
@inject HttpClient Http

<h1>Products list</h1>

<p>This component demonstrates fetching products from the server.</p>
PRODUCTS_API #1.9: @productsApi

<p>
    <input @bind="productsApi" placeholder="PRODUCTS_API" />
</p>

<p>
    <input @bind="newProductName" placeholder="New Product Item" />
    <button class="btn btn-primary" @onclick="@AddProduct">Add Product</button>
</p>

<p>
    <button class="btn btn-primary" @onclick="@GetProducts">Fetch Products</button>
</p>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Product> products;
    private string newProductName;
    private string productsApi = "http://51.138.13.80/api/ProductsApi";

    protected override async Task OnInitializedAsync()
    {
        // productsApi = Environment.GetEnvironmentVariable("PRODUCTS_API");

        //var url = "http://mvc-service/api/ProductsApi"; // this doesn't work
        //var url = "http://51.105.253.116/api/ProductsApi"; // this works

        //products = await Http.GetJsonAsync<List<Product>>(productsApi);
    }

    private async Task GetProducts()
    {
        System.Console.WriteLine("productsApi : {0}", productsApi);

        products = await Http.GetJsonAsync<List<Product>>(productsApi);
    }

    private async Task AddProduct()
    {
        var addItem = new Product { Name = newProductName };
        await Http.PostJsonAsync(productsApi, addItem);
    }

    public class Product
    {
        public int Id { get; set; }

        public string Name { get; set; }
    }
}
