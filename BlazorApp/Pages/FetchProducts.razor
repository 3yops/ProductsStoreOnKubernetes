@page "/fetchproducts"
@using System.Net.Http
@inject HttpClient Http

<h1>Products list</h1>

<p>This component demonstrates fetching products from the server.</p>

<input @bind="newProductName" placeholder="New Product Item" />
<button @onclick="@AddItem">Add</button>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Product> products;
    private string newProductName;

    protected override async Task OnInitializedAsync()
    {
        products = await Http.GetJsonAsync<List<Product>>("https://localhost:5001/api/ProductsApi");
    }

    private async Task AddItem()
    {
        var addItem = new Product { Name = newProductName };
        await Http.PostJsonAsync("https://localhost:5001/api/ProductsApi", addItem);
    }

    public class Product
    {
        public int Id { get; set; }

        public string Name { get; set; }
    }
}
